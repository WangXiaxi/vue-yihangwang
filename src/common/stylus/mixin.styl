line-scale()
  content: ''
  position: absolute
  z-index: 1
  left: 0
  bottom: 0
  width: 100%
  height: 1px; /*no*/
  background-image: -webkit-gradient(linear, left top, left bottom, from(transparent), color-stop(50%, transparent), color-stop(50%, #eeeeee))
  background-image: linear-gradient(180deg, transparent, transparent 50%, #eeeeee 50%)
  background-size: 120% 1px; /*no*/
  background-repeat: no-repeat
  background-position: bottom left
  background-origin: content-box

// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// 扩展点击区域
extend-click()
  position: relative
  &:after
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px